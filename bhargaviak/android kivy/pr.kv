<Result>:
    name:"result"
    GridLayout:
        cols:1
        GridLayout:
            cols:1
        Button:
            text:"Main"
            background_color: 0.1, 0.5, 0.6, 1
            size_hint: 0.3, 0.3
            pos: 100, 100
            font_size:30
            on_release:
                app.root.current="main"
                root.manager.transition.direction="right"