                    text:"1"  
                    color:0,0,0,1                                      
                CheckBox:
                    group:'fbs'
                    on_active:root.checkbox_click_fbs(self,self.active)
                    color:0,0,0,1
            Label:
                text:'ECG'
                color:0,0,0,1
            TextInput:
                id:ecg
                hint_text:"Enter Ecg value"
                input_type:'number'
                input_filter:'int'
                    # for input only to number
                multiline:False 
                
            Label:
                text:'Thalaz'
                color:0,0,0,1
            TextInput:
                id:thalaz
                hint_text:"Enter Thalaz value"
                input_type:'number'
                input_filter:'int'
                    # for input only to number
                multiline:False 
                
