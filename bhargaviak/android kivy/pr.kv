    BoxLayout:
            # orientation: 'vertical'
            # size:root.width,root.height
        Label:
            text:"Form"
            color:0,0,0,1
        GridLayout:
            cols:2

            Label:
                text:"Name"
                color:0,0,0,1
            TextInput:
                id:name
                hint_text:"Enter your name"
                input_type:'text'
                multiline:False

            Label:
                text:'Age'
                color:0,0,0,1
            # secodm method for age slider
            # slide_text:slider_label
            BoxLayout:
                orientation: 'vertical'
                size:root.width,root.height
                cols:2
                Label:
                    id:slide_age
                    text:"Age"
                    color:0,0,0,1
                    font_size:20
                Slider:
                    min:4
                    max:99
                    step:1
                    orientation: 'horizontal'
                    on_value:root.slide_it_age(*args)
                    

# radio button
            Label:
                text:'Gender'
                color:0,0,0,1
            GridLayout:
                cols:4
                Label:
                    text:"Male" 
                    color:0,0,0,1         
                CheckBox:
                    group:'sex'
                    on_active:root.checkbox_click_sex(self,self.active)
                    color:0,0,0,1
                Label:
                    text:"Female"  
                    color:0,0,0,1                                      
                CheckBox:
                    group:'sex'
                    on_active:root.checkbox_click_sex(self,self.active)
                    color:0,0,0,1
            
            Label:
                text:'Trp'
                color:0,0,0,1
            TextInput:
                id:trp
                hint_text:"Enter Trp value"
                input_type:'number'
                input_filter:'int'
                    # for input only to number
                multiline:False 
                
            Label:
                text:'Cholestrol'
                color:0,0,0,1
            TextInput:
                id:cholestrol
                hint_text:"Enter cholestrol value"
                input_type:'number'
                input_filter:'int'
                    # for input only to number
                multiline:False 

