Manager:
    Main:
    Form:
    Result:

<Main>:
    name:"main"
    GridLayout:
        cols:1
        Label:
            text:'Predection Form For Heart Attack'
            color:0,0,0,1
            font_size:30
        BoxLayout:
            padding:5
            Image:
                size_hint_y:None
                source:"neclogo.jpg"
                width:1000
                height:200
        
        GridLayout:
            cols:1
        Button:
            text:"Form"
            background_color: 0, 0, 1, 1
            size_hint: 0.3, 0.3
            pos: 100, 100
            font_size: 40
            on_release:
                app.root.current="form"
                root.manager.transition.direction="left"

            


