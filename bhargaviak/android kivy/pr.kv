                    text:"0" 
                    color:0,0,0,1         
                CheckBox:
                    group:'slope'
                    on_active:root.checkbox_click_slope(self,self.active)
                    color:0,0,0,1
                Label:
                    text:"1"  
                    color:0,0,0,1                                      
                CheckBox:
                    group:'slope'
                    on_active:root.checkbox_click_slope(self,self.active)
                    color:0,0,0,1
                
                
        GridLayout:
            cols:1    
        Button:
            text:"Submit"
            background_color: 0.4, 0.5, 0.6, 1
            size_hint: 0.3, 0.3
            pos: 100, 100
            font_size:30
